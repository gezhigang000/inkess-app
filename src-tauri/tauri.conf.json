{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Inkess",
  "version": "2.2.0",
  "identifier": "com.inkess.markdown",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Inkess",
        "width": 1100,
        "height": 720,
        "minWidth": 680,
        "minHeight": 480,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval' blob:; img-src 'self' data: blob: asset: https://asset.localhost; font-src 'self' data:; connect-src ipc: http://ipc.localhost asset: https://asset.localhost; worker-src 'self' blob:",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "mdown", "mkd"],
        "mimeType": "text/markdown",
        "role": "Editor"
      },
      {
        "ext": ["txt", "log", "csv"],
        "mimeType": "text/plain",
        "role": "Editor"
      },
      {
        "ext": ["pdf"],
        "mimeType": "application/pdf",
        "role": "Viewer"
      },
      {
        "ext": ["docx"],
        "mimeType": "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
        "role": "Viewer"
      }
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": "Inkess.entitlements",
      "infoPlist": "Info.plist"
    },
    "resources": {}
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/gezhigang000/inkess/releases/latest/download/latest.json"
      ],
      "pubkey": ""
    }
  }
}
